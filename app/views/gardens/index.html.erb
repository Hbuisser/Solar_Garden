<h1> Gardens </h1>
<%= form_tag gardens_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find your garden"
  %>
<% end %>
<div class="cards">
  <% @gardens.each do |garden| %>
    <div class="card-trip">
    <img src="http://www.sahomeowner.co.za/wp-content/uploads/2013/07/August-Garden-22.jpg">
      <div class="card-trip-infos">
        <div>
          <h2><%= garden.title %></h2>
          <p><%= garden.description %></p>
          <p><%= garden.square_meters %> square meters</p>
        </div>
        <h2 class="card-trip-pricing"><%= garden.price %>â‚¬</h2>
      </div>
          <div class="d-flex justify-content-around align-items-end">
            <% if policy(garden).edit? %>
              <button class ="btn">
                <%= link_to "edit garden", edit_garden_path(garden) %>
              </button>
            <% end %>
              <button class ="btn">
                <%= link_to "show garden", garden_path(garden)  %>
              </button>
            <% if policy(garden).destroy? %>
              <button class ="btn">
                <%= link_to "remove garden", garden_path(garden), method: :delete%>
              </button>
            <% end %>

          </div>
    </div>
  <% end %>
</div>
