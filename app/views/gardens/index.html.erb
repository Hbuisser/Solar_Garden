<h1> Gardens </h1>
<div class="cards">
  <% @gardens.each do |garden| %>
    <div class="card-trip">
    <img src="https://images.unsplash.com/photo-1497435334941-8c899ee9e8e9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=968&q=80">
      <div class="card-trip-infos">
        <div>
          <h2><%= garden.title %></h2>
          <p><%= garden.description %></p>
          <p><%= garden.square_meters %> square meters</p>
        </div>
        <h2 class="card-trip-pricing"><%= garden.price %>€</h2>
      </div>
          <div class="d-flex justify-content-around align-items-end">
            <% if policy(garden).edit? %>
              <button class ="btn">
                <%= link_to "edit garden", edit_garden_path(garden) %>
              </button>
            <% end %>
              <button class ="btn">
                <%= link_to "show garden", garden_path(garden)  %>
              </button>
            <% if policy(garden).destroy? %>
              <button class ="btn">
                <%= link_to "remove garden", garden_path(garden), method: :delete%>
              </button>
            <% end %>

          </div>
    </div>
  <% end %>
</div>