<div class="container">
  <h1> Gardens </h1>
  <%= form_tag gardens_path, method: :get do %>
  <%= text_field_tag :query,
  params[:query],
  class: "form-control",
    placeholder: "Find your garden"
    %>
    <% end %>
    <div class="cards">
      <% @gardens.each do |garden| %>
      <div class="card-trip">
        <%= cl_image_tag garden.photo %>
        <div class="card-trip-infos">
          <div>
            <h2><%= garden.title %></h2>
            <p><%= garden.description %></p>
            <p><%= garden.square_meters %> square meters</p>
          </div>
          <h2 class="card-trip-pricing"><%= garden.price %>â‚¬</h2>
        </div>
        <div class="buttons-row">
          <button class ="button">
            <%= link_to "see details", garden_path(garden)  %>
          </button>
          <% if policy(garden).destroy? %>
          <button class ="button">
            <%= link_to "remove", garden_path(garden), method: :delete%>
          </button>
          <% end %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
