<div class="searchbar">
  <%= simple_form_for :search, url: root_path, method: :get do |f| %>
    <div class="search-form-control form-group">
      <div class="inputs">
        <input class="form-control string required" type="text" name="place" id="search_query" placeholder="Where?" />
        <select class="form-control string required" name="duration" id="search_query">
          <option value="">How much sq²</option>
          <option value="small">Under 100 sq²</option>
          <option value="medium">Between 100 sq² and 200 sq²</option>
          <option value="large">Between 200 sq² and 500 sq²</option>
          <option value="extar large">Over 500 sq²</option>
          <option value="">No preference</option>
        </select>
      </div>
      <br>
      <button class='button'>
        <%= link_to 'Search', gardens_path  %>
      </button>
    </div>
  <% end %>
</div>
